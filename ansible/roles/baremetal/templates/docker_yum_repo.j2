[docker-repo]
name=Docker main Repository
{% if docker_yum_url == "https://mirror.tuna.tsinghua.edu.cn/docker/yum" and (ansible_distribution | lower) == 'centos' %}
{% if docker_yum_centos_url == "https://mirror.tuna.tsinghua.edu.cn/docker/yum/repo/centos7" %}
baseurl={{ docker_yum_centos_url }}
{% else %}
baseurl={{ docker_yum_centos_url }}/{{ ansible_distribution | lower }}/{{ ansible_distribution_major_version | lower }}
{% else %}
baseurl={{ docker_yum_url }}/repo/main/{{ ansible_distribution | lower }}/{{ ansible_distribution_major_version | lower }}
{% endif %}
enabled=1
gpgcheck=1
gpgkey={{ docker_yum_url }}/gpg
